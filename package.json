{
  "name": "brewblox-auth",
  "version": "1.0.0",
  "description": "Authentication service for Brewblox",
  "repository": "git@github.com:BrewBlox/brewblox-auth.git",
  "author": "Brewblox <dev@brewpi.com>",
  "license": "GPL-3.0",
  "private": false,
  "scripts": {
    "build": "tsc",
    "lint:eslint": "eslint --ext .js,.ts --ignore-path .gitignore ./src",
    "lint:prettier": "prettier --check ./src ./*.js ./*.yml",
    "lint:tsc": "tsc --noEmit",
    "lint": "yarn lint:tsc && yarn lint:eslint && yarn lint:prettier",
    "lint:fix:eslint": "yarn lint:eslint --fix",
    "lint:fix:prettier": "prettier --write ./src ./test ./dev/*.js ./*.js ./*.yml",
    "lint:fix": "yarn lint:fix:eslint && yarn lint:fix:prettier"
  },
  "dependencies": {
    "@koa/cors": "^4.0.0",
    "axios": "^1.4.0",
    "jwt-decode": "^3.1.2",
    "koa": "^2.14.2",
    "koa-body": "^6.0.1",
    "koa-logger": "^3.2.1",
    "koa-router": "^12.0.0",
    "koa-session": "^6.4.0",
    "lodash": "^4.17.21",
    "minimist": "^1.2.8",
    "uuid": "^9.0.0",
    "winston": "^3.9.0"
  },
  "devDependencies": {
    "@types/koa-router": "^7.4.4",
    "@types/koa-session": "^6.4.1",
    "@types/koa__cors": "^4.0.0",
    "@types/lodash": "^4.14.195",
    "@types/minimist": "^1.2.2",
    "@types/node": "^20.3.1",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "http-proxy-middleware": "^2.0.6",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "prettier-plugin-organize-imports": "^3.2.2",
    "typescript": "^5.1.3"
  }
}
